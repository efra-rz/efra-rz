block config
  include ../config/config.pug
doctype html
html(lang='es')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(http-equiv='X-UA-Compatible', content='ie=edge')
    meta(name='description' content=pageDescription)
    title #{pageTitle} | #{empresaTitle}
    link(rel='stylesheet', href='css/style.css')
  body
    header.main-header__topbar
      .ed-container
        // Start logo
        .ed-item.s-100.m-40.cross-center
          a(href="/"): img(src='img/logo-web.png', alt='')
        // End logo
        
        // Start menu
        nav.ed-item.s-100.m-60.cross-center
          //ul.ed-menu.l-horizontal
          ul.main-menu.ed-menu.m-horizontal
            block inicio
              li.main-menu__item: a(href='/').main-menu__link Home
            block acerca
              li.main-menu__item: a(href='/acerca.html').main-menu__link Acerca
            block servicios
              li.main-menu__item: a(href='/servicios.html').main-menu__link Servicios
            block proyectos
              li.main-menu__item: a(href='/blog.html').main-menu__link Blog
            block contacto
              li.main-menu__item: a(href='/contacto.html').main-menu__link Contacto
        // End menu
    
    //********************
    //*Start main content*
    //********************
    
    block main
      // Start section banner
      include ../includes/sections/home-banner.pug
      // End section banner

      // Start section services
      include ../includes/sections/home-services.pug
      // End section services

      // Start section blog
      include ../includes/sections/home-blog.pug    
      // End section blog

      // Start section projects
      include ../includes/sections/home-projects.pug
      // End section projects

    //*******************
    //****End content****
    //*******************
    
    // Start footer
    footer.main-footer--bak-container
      // Start footer main container
      article.ed-container
        // Start footer about
        section.ed-item.s-100.m-500.m-1-3
          h1 Acerca
          img(src='img/logo-web.png', alt='')
          p
            | Lorem ipsum dolor sit amet, consectetur adipisicing elit. Autem cumque laboriosam ea velit voluptatem ratione neque odit, a totam nam, dolorum cum magni nihil libero inventore sapiente. Asperiores, veritatis architecto.
          h2 Social Network
          ul
            li Mail
            li Github
            li Codepen
            li Facebook
        // End footer about
        // Start footer contact
        section.ed-item.s-100.m-500.m-1-3
          h1 Facebook
          address
            a(href='mailto:contacto@efra-rz.com') contacto@efra-rz.com
        // End footer contact
        // Start footer Facebook
        section.ed-item.s-100.m-500.m-1-3
          h1 Contacto
          address
            a(href='mailto:contacto@efra-rz.com') contacto@efra-rz.com
        // End footer Facebook
      // End footer main container
      .footer-bottom
        section
          p Pie de p√°gina
    // End footer
    
    // Scripts
    script(src='js/ed-grid.js')
    script(src='js/babel/menu.js')
